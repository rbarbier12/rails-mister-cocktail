<% if @cocktail.photo.attached?%>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h2><%= @cocktail.name %>
</div>
<% else %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url("<%= image_path 'san_francisco.png', height: 300, width: 400, crop: :fill %>")">
  <h2><%= @cocktail.name %>
</div>
<% end %>

</h2><p>Doses</p>
<ul>
  <% @doses.each do |dose| %>
    <% if dose.cocktail_id == @cocktail.id %>
      <li>
        <%= dose.ingredient.name %> : <%= dose.description %>
        <%= link_to "Remove",
          dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "Add a dose for this cocktail", new_cocktail_dose_path(@cocktail) %>
<br>
<%= link_to "Back to List", cocktails_path  %>
