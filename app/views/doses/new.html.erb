<div class="container">
  <h1>Add a New Dose for your cocktail</h1>
  <br>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add Dose", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "Back to Cocktail", cocktail_path(@cocktail)  %>
</div>
